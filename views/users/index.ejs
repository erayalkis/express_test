<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User</title>
  </head>
  <body>
    <h1>Users</h1>
    <% for(let user of locals.users) { %>
    <ul>
      <li>ID: <%=user.id%></li>
      <li>Name: <%=user.firstName%></li>
      <li>Last Name: <%=user.lastName%></li>
      <li>Age: <%=user.age || "Age unavailable" %></li>
      <form action="/users/<%=user.id%>?_method=DELETE" method="POST">
        <button type="submit">Delete <%=user.firstName%></button>
      </form>
    </ul>
    <% }%>
  </body>
</html>
